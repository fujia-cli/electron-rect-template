{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true, /* es6模块化与非es6模块化标准互通 */
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@gui/*": ["./app/gui/*"],
      "@pages/*": ["./app/gui/pages/*"],
      "@assets/*": ["./app/assets/*"],
      "@components/*": ["./app/gui/components/*"],
    },
    "moduleResolution": "node"
  },
  "exclude": ["dist", "node_modules"],
  "include": ["app/**/*.ts", "app/**/*.tsx", "app/**/*.d.ts"]
}
